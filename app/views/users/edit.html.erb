<%= render partial: 'shared/header' %>
<%= render partial: 'shared/nav' %>
<div class="inner mypage-inner">
  <div class="mypage-container">
    <div class="mypage-sidebar">
      <div class="mypage-sidebar__nav-title">メニュー</div>
      <ul class="mypage-sidebar__nav-items">
        <%= link_to user_path(current_user) do %>
          <li>
            <i class="fas fa-home"></i><span>ホーム</span>
          </li>
        <% end %>
        <%= link_to "#" do %>
          <li>
            <i class="fas fa-pencil-alt"></i><span>レビュー</span>
          </li>
        <% end %>
        <%= link_to "#" do %>
          <li>
            <i class="fas fa-bookmark"></i><span>ブックマーク</span>
          </li>
        <% end %>
        <%= link_to "#" do %>
          <li class="sidebar-last-child">
            <i class="fas fa-calendar-alt"></i><span>イベント</span>
          </li>
        <% end %>
      </ul>
      <div class="mypage-sidebar__nav-title">アカウント管理</div>
      <ul class="mypage-sidebar__nav-items">
        <%= link_to edit_user_path(current_user) do %>
          <li>
            <i class="fas fa-user-circle"></i><span>プロフィール</span>
          </li>
        <% end %>
        <%= link_to edit_user_path(current_user) do %>
          <li>
            <i class="fas fa-envelope"></i><span>メールアドレス</span>
          </li>
        <% end %>
        <%= link_to edit_user_registration_path do %>
          <li class="sidebar-last-child">
            <i class="fas fa-lock"></i><span>パスワード</span>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="mypage-contents">
      <div class="mypage-contents__title">プロフィール編集</div>
      <div class="mypage-contents__content">
        <%= form_with model: @user do |f| %>
          <table>
            <tr>
              <th>名前</th>
              <td><%= f.text_field :username %></td>
            </tr>
            <tr>
              <th>自己紹介</th>
              <td><%= f.text_area :profile %></td>
            </tr>
            <tr>
              <th>写真</th>
              <td>
                <%= f.file_field :img %>
                <% if current_user.img.url.nil? %>
                  <p>まだ画像は登録されていません</p>
                <% else %>
                  <p><%= f.check_box :remove_img %>画像を削除する</p>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>メールアドレス<br>（編集）</th>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <th>メールアドレス<br>（確認用）</th>
              <td><%= f.email_field :email_confirmation, label: false %></td>
            </tr>
          </table>
          <div><%= f.submit "更新する" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render partial: 'shared/footer' %>